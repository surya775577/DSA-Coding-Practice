class Solution:
    def minChar(self, s):
        # code here
        rev = s[::-1]
        temp = s+ "#"+rev
        
        lps = [0] * len(temp)
        
        for i in range(1,len(temp)):
            j = lps[i-1]
            
            while j>0 and temp[i] != temp[j]:
                j=lps[j-1]
                
            if temp[i]==temp[j]:
                j+=1
                
            lps[i]=j
            
        return len(s)-lps[-1]
